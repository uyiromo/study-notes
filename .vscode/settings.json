{
    // C/C++ Intellisense settings
    "C_Cpp.intelliSenseEngine": "disabled",
    "C_Cpp.errorSquiggles": "enabled",
    "C_Cpp.autocomplete": "disabled",
    "C_Cpp.formatting": "disabled",
    // clangd
    "clangd.arguments": [
        "--clang-tidy",
        "--completion-style=detailed",
        "--header-insertion=iwyu",
        "--pch-storage=memory",
    ],
    "clangd.path": "/usr/bin/clangd-19",
    "clangd.onConfigChanged": "restart",
    // cmake
    "cmake.configureArgs": [
        "--preset=default",
        "-DCMAKE_CXX_COMPILER=/usr/local/bin/g++",
    ],
    "cSpell.words": [
        "Assinable",
        "cbefore",
        "cbegin",
        "cend",
        "Dereferenceability",
        "ilist",
        "ssize",
        "subrange",
        "tparams",
        "uunordered",
        "writeability"
    ],
    "cmake.sourceDirectory": "/home/uyiromo/cpp-books/cppreference/tests",
    "cmake.ctest.testSuiteDelimiter": "[\\._]"
}
