    "clangd.path": "/usr/bin/clangd-19",
    "clangd.onConfigChanged": "restart",
    // cmake
    "cmake.configureArgs": [
        "--preset=default",
    ],
    "cSpell.words": [
        "Assinable",
        "cbefore",
        "cbegin",
        "cend",
        "ilist",
        "subrange",
        "tparams",
        "uunordered"
    ],
    "cmake.sourceDirectory": "/home/uyiromo/cpp-books/cppreference/tests"
}
